    let currentLang = 'en';
    let completedTasks = 0;

    function loadTasks() {
      const taskList = document.getElementById("taskList");
      taskList.innerHTML = "";
      completedTasks = 0;
      updateProgress(); // Reset progress bar
      tasks[currentLang].forEach((taskObj, index) => {
        const li = document.createElement("li");
        li.classList.add("task-item");

        // Create title container with a complete button
        const titleDiv = document.createElement("div");
        titleDiv.classList.add("task-title");
        titleDiv.innerHTML = `<strong>${taskObj.title}</strong>`;
        
        // Create complete button with neuromorphic styling
        const completeBtn = document.createElement("button");
        completeBtn.classList.add("complete-btn");
        completeBtn.textContent = "Complete Me";
        completeBtn.addEventListener("click", function(e) {
          e.stopPropagation();
          if (!li.classList.contains("completed")) {
            li.classList.add("completed");
            completeBtn.textContent = "You Complete Me";
            completedTasks++;
            updateProgress();
          }
        });
        titleDiv.appendChild(completeBtn);
        li.appendChild(titleDiv);
        
        // Create details container, initially hidden
        const detailsDiv = document.createElement("div");
        detailsDiv.classList.add("task-details");
        detailsDiv.innerHTML = taskObj.details;
        detailsDiv.style.display = "none";
        li.appendChild(detailsDiv);
        
        // Toggle details when clicking on the task (but not the complete button)
        li.addEventListener("click", function(e) {
          if (e.target.tagName !== "BUTTON") {
            detailsDiv.style.display = detailsDiv.style.display === "none" ? "block" : "none";
          }
        });
        
        taskList.appendChild(li);
      });
    }
    
    function updateProgress() {
      const progressBar = document.getElementById("progressBar");
      const total = tasks[currentLang].length;
      progressBar.style.width = ((completedTasks / total) * 100) + "%";
    }
    
    function setLanguage(lang) {
      currentLang = lang;
      loadTasks(); // Reset checklist when language changes
      // Update "Show More" content if already visible
      const moreDiv = document.getElementById("moreContent");
      if (moreDiv.style.display === "block") {
        moreDiv.innerHTML = moreTraining[currentLang];
      }
    }
    
    function toggleMore() {
      const moreDiv = document.getElementById("moreContent");
      const toggleBtn = document.getElementById("toggleMoreBtn");
      if (moreDiv.style.display === "block") {
        moreDiv.style.display = "none";
        toggleBtn.textContent = "Show More Training Content";
      } else {
        moreDiv.innerHTML = moreTraining[currentLang];
        moreDiv.style.display = "block";
        toggleBtn.textContent = "Hide Training Content";
        moreDiv.scrollIntoView({ behavior: "smooth" });
      }
    }
    
    function resetChecklist() {
      loadTasks(); // Simply reloads tasks and resets progress
    }
    
    // Initial load
    loadTasks();
  </script>
</body>
</html>
